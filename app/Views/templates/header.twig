<!DOCTYPE html>
<html>
    <head>
        <title>{{ title | striptags }}</title>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="../../../vendor/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="../../../vendor/components/font-awesome/css/all.min.css" rel="stylesheet">
        <link href="../../../css/style.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <div class="sidebar position-sticky d-flex flex-column flex-shrink-0 p-3 text-center bg-dark" data-bs-theme="dark" style="width: 280px;">
                <a href="#" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
    {#                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>#}
                    {% if logon %}
                        <span class="fs-4">{{ user.getLogin() }}</span>
                    {% else %}
                        <span class="fs-4">Logged out</span>
                    {% endif %}
                </a>
                <hr class="text-light">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="?page=home" class="nav-link" aria-current="page">
    {#                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>#}
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="?page=classrooms" class="nav-link">
    {#                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>#}
                            Classrooms
                        </a>
                    </li>
                    <li>
                        <a href="?page=all-tasks" class="nav-link">
    {#                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>#}
                            All tasks
                        </a>
                    </li>
                    <li>
                        <a href="?page=profile" class="nav-link">
    {#                        <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>#}
                            Profile
                        </a>
                    </li>
                </ul>
                <hr>
                <div>
                    <ul class="nav nav-pills text-center align-items-center flex-column mb-auto">
                        {% if logon %}
                            <li>
                                <form action="?page=login" method="post">
                                    <input type="submit" name="logout" value="Log out" class="nav-link">
                                </form>
                            </li>
                        {% else %}
                            <li>
                                <a href="?page=login" class="nav-link">
                                    Login
                                </a>
                            </li>
                            <li>
                                <a href="?page=registration" class="nav-link">
                                    Register
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </header>
        {% for Alerts in alerts %}
            <div class="alert alert-info alert-dismissible">{{ Alerts.value }}</div>
        {% endfor %}

