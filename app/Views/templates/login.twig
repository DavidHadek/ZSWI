{% extends("page.twig") %}

{% block contents %}

<body class="bg-light">

<div>
    <h6 class="error-message-title-centered">{{ alert_msg }}</h6>
</div>

<section class="text-center">
    <div class="p-5 bg"></div>
    <div class="card mx-4 mx-md-5 shadow-5-strong form">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5">Login</h2>
                    <form id="f" action="index.php?page=home" method="post">
                        <!-- Email -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="login">Username</label>
                            <input type="text" id="login" name="login" class="form-control"
                                   value="{{ login is defined ? login : '' }}" required/>
                        </div>

                        <!-- Heslo -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="pas">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-unlock-keyhole"></i></span>
                                <input type="password" class="form-control" name="heslo" id="pas" required>
                                <span class="input-group-text">
                                    <i class="fas fa-eye toggle-password" id="password-eye"
                                       onclick="togglePasswordVisibility('pas','password-eye')"></i>
                                </span>
                            </div>
                        </div>

                        <!-- Potvrzeni -->
                        <input type="submit" class="btn btn-primary btn-block mb-4" name="prihlaseni" value="Log in">
                    </form>

                    <p>Don't have an account? <a href="index.php?page=registration" class="link-info">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="{{ baseURL }}/app/Views/JS/validateRegistrationAndSignIn.js"></script>

{% endblock contents %}