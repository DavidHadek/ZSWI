{% block header %}
    {% include("header.twig") %}
{% endblock %}


<section class="text-center">
    <div class="p-5 bg"></div>
    <div class="card mx-4 mx-md-5 shadow-5-strong form">
        <div class="card-body py-5 px-md-5">

            <div class="row d-flex justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-5">Login</h2>
                    <form id="f" action="index.php?page=login" method="post">
                        <!-- Email -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="username">Username</label>
                            <input type="text" id="login" name="username" class="form-control" value="{{ login is defined ? login : '' }}" required/>

                        </div>

                        <!-- Heslo -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="pas">Password</label>
                            <input type="password" id="pas" name="password" class="form-control" required/>
                        </div>


                        <!-- Potvrzeni -->
                        <input type="submit" class="btn btn-primary btn-block mb-4" name="login" value="Log in">
                    </form>

                    <p>Don't have an account? <a href="index.php?page=registration" class="link-info">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

